<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventsDetails"
    android:background="@drawable/login"
    >



    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/event_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="149dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="374dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/loading" />

        <TextView
            android:id="@+id/event_title"
            android:layout_width="285dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="31dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="84dp"
            android:layout_marginEnd="95dp"
            android:layout_marginRight="187dp"
            android:layout_marginBottom="584dp"
            android:fontFamily="@font/georgia"
            android:text="Title"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/likebutton"
            android:layout_width="60dp"
            android:layout_height="46dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="274dp"
            android:layout_marginLeft="274dp"
            android:layout_marginTop="78dp"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="92dp"
            android:layout_marginBottom="611dp"
            android:background="@drawable/heart_border" />

        <TextView
            android:id="@+id/event_booking"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="477dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="55dp"
            android:layout_marginBottom="204dp"
            android:background="@drawable/event_info"
            android:padding="10dp"
            android:text="Booking"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/event_date"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="49dp"
            android:layout_marginTop="399dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="53dp"
            android:layout_marginBottom="308dp"
            android:background="@drawable/event_info"
            android:padding="10dp"
            android:text="Date"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/event_location"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="49dp"
            android:layout_marginTop="711dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="53dp"
            android:layout_marginBottom="308dp"
            android:background="@drawable/event_info"
            android:padding="10dp"
            android:textSize="20dp"
            android:text="Location" />

        <TextView
            android:id="@+id/event_details"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-1dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="558dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="53dp"
            android:layout_marginBottom="37dp"
            android:background="@drawable/addevent_desc"
            android:padding="10dp"
            android:textSize="20dp"
            android:text="Description" />

        <TextView
            android:layout_width="221dp"
            android:layout_height="42dp"
            android:layout_below="@id/event_details"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="55dp"
            android:layout_marginTop="83dp"
            android:layout_marginEnd="135dp"
            android:fontFamily="@font/segoe_ui"
            android:text="Going Status"
            android:textSize="20dp"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_below="@id/event_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/going"
                android:layout_width="189dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/event_details"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="65dp"
                android:layout_marginTop="143dp"
                android:layout_marginEnd="157dp"
                android:text="Going"/>

            <RadioButton
                android:id="@+id/not_going"
                android:layout_width="189dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/going"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="67dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="155dp"
                android:text="Maybe" />

        </RadioGroup>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_details"
            android:text="BOOK TICKETS"

            />


    </RelativeLayout>
</ScrollView>